
<h1>Prefectures</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.name %></td>
        <td><%= link_to '中身を見る', region_path(region.objectId) %></td>
        <td><%= link_to '編集', edit_region_path(region.objectId) %></td>
        <td><%# link_to 'Destroy', regions_path(region.objectId), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

