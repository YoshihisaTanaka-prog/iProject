<%= form_tag autho_path, method: :get do %>
    <%= select_tag 'class', options_for_select(@option, "Region"), include_blank: false %>
    <%= submit_tag("選択") %>
<% end %>
<p id="notice"><%= notice %></p>

<h1>Prefectures</h1>

<table>
  <thead>
    <tr>
      <th>Objectid</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.objectId %></td>
        <td><%= region.name %></td>
        <td><%= link_to 'Show', region_path(region.objectId) %></td>
        <td><%= link_to 'Edit', edit_region_path(region.objectId) %></td>
        <td><%# link_to 'Destroy', regions_path(region.objectId), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

